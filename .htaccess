# ========================
# Zoutt Web - .htaccess SEO Pro
# ========================

# 1. Página por defecto
DirectoryIndex index.html

# 2. Eliminar .html de las URLs
RewriteEngine On
# Si el archivo o directorio no existe
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([a-zA-Z0-9_-]+)/?$ $1.html [L]

# 3. Redirección desde .html a la versión limpia
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /(.+)\.html\ HTTP/
RewriteRule ^(.+)\.html$ /$1 [R=301,L]

# 4. Forzar HTTPS (solo si tenés certificado SSL)
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# 5. Compresión GZIP para mejorar velocidad
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/css text/javascript application/javascript application/json
</IfModule>

# 6. Cache estática para imágenes, CSS y JS
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 6 months"
  ExpiresByType image/jpeg "access plus 6 months"
  ExpiresByType image/png "access plus 6 months"
  ExpiresByType image/webp "access plus 6 months"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# 7. Seguridad mínima (evita sniffing de contenido)
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
</IfModule>

# 8. Personalizar error 404
ErrorDocument 404 /404.html

# 9. Sitemap para motores de búsqueda
# (Asegurate de subir un archivo sitemap.xml a la raíz)
RewriteRule ^sitemap\.xml$ sitemap.xml [L]
